URxvt.font: xft:monospace:size=12
URxvt.scrollBar: false

! Perl Extensions
URxvt.perl-ext-common: default,resize-font,matcher,confirm-paste,keyboard-select,selection-to-clipboard

URvxt.resize-font.smaller: c--
URvxt.resize-font.bigger: c-=

URvxt.url-launcher: /usr/bin/xdg-open
URvxt.matcher.button: 1

URxvt.keysym.M-Escape: perl:keyboard-select:activate

! Fix a weird border issue
URxvt.borderColor: #161b1d

! Base16 Atelier Lakeside
! Scheme: Bram de Haan (http://atelierbram.github.io/syntax-highlighting/atelier-schemes/lakeside/)

